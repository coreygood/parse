<h1>Posts</h1>
<% if @posts.count > 0 %>
	<% @posts.each do |post| %>
		<blockquote>
			<p>Post: <%= post.id %></p>
			<p>Body: <%= post.body %></p>
			<small>Email:<%= post.email %></small>
			<p>Hourly Calls: <%= post.hourly_calls %></p>
			<p>Daily Calls: <%= post.total_calls %></p>
		</blockquote>
	<% end %>
<% else %>
	<p><em>There aren't any posts.</em></p>
<% end %>